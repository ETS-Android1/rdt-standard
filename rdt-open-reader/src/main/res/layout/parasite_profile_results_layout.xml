<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/label_and_date"
        layout="@layout/test_name_and_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_qpcr_falciparum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P. falciparum - "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_and_date"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_qpcr_vivax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_qpcr_falciparum"
        android:text="P. vivax - "
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_qpcr_malariae"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_qpcr_vivax"
        android:text="P. malariae - "
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_qpcr_ovale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_qpcr_malariae"
        android:text="P. ovale - "
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_qpcr_gameto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_qpcr_ovale"
        android:text="Pf. gameto - "
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="15sp" />

    <View android:id="@+id/qpcr_bottom_divider_line" style="@style/Divider.Horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_qpcr_gameto"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>